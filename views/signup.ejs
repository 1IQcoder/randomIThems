<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/regpage.css">
    <title>create your account</title>
</head>
<body>
    <%- include ('block/header.ejs') -%>
    <div class="wrapper">
        <div class="container">
            <section class="page_title_wrap block_border f f-js-between">
                <div class="page_title h100 f f-al-center">
                    <h2 class="t_page_title">Регистрация</h2>
                </div>
                <div class="button_wrapper f f-al-center">
                    <!-- <a class="button-1" href="/createpost">create post</a>
                    <a class="button-1" href="#">find by tags</a> -->
                </div>
            </section>
            <section class="block_border register_block input1">
                <form class="signupFormEl" action="/auth/submit-signup" method="post">
                    <div>
                        <label for="username">Username</label>
                        <input name="username" type="text" required>
                        <span class="erorMessage"></span>
                    </div>
                    <div>
                        <label for="email">E-mail</label>
                        <input name="email" type="email" required>
                        <span class="erorMessage"></span>
                    </div>
                    <div>
                        <label for="password">Password</label>
                        <input name="password" type="password" required>
                        <span class="erorMessage"></span>
                    </div>
                    <!-- <input id="submit_register" type="submit"> -->
                    <button class="button_style-2" id="submit_register" type="submit">Submit</button>
                </form>
            </section>
        </div>
    </div>

    <script src="/js/regpage.js"></script>
</body>


















